<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1" android:orientation="vertical" android:background="#1A4D21">
    <RadioGroup android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:id="@+id/nineEighteen" android:layout_width="wrap_content" android:onClick="nineEighteenSelected">
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"  android:text="9 Holes" android:id="@+id/nineHoles" android:onClick="nineEighteenSelected"></RadioButton>
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="18 Holes" android:id="@+id/eighteenHoles" android:onClick="nineEighteenSelected" android:checked="true"></RadioButton>
    </RadioGroup>
    <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:id="@+id/textView6" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Stableford:"></TextView>
    <TextView android:saveEnabled="true" android:layout_gravity="center" android:text="0" android:layout_width="wrap_content" android:textSize="56sp" android:soundEffectsEnabled="true" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/stableFordScore"></TextView>

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="1" >

    <LinearLayout android:orientation="vertical" android:layout_margin="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LinearLayout03">
        <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:text="Pl Hcp"></TextView>

        <ImageButton
            android:id="@+id/ImageButton06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="plHandicapUpClicked"
            android:src="@android:drawable/arrow_up_float" >
</ImageButton>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:textSize="36sp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/plHandicap" android:text="18"></TextView>

        <ImageButton
            android:id="@+id/ImageButton05"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="plHandicapDownClicked"
            android:src="@android:drawable/arrow_down_float" >
</ImageButton>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_margin="10dip" android:layout_height="wrap_content" android:id="@+id/LinearLayout02" android:layout_width="wrap_content">
        <TextView android:text="S.I." android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center|center_horizontal"></TextView>

        <ImageButton
            android:id="@+id/strokeIndexUp"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:onClick="strokeIndexUpClicked"
            android:src="@android:drawable/arrow_up_float" >
</ImageButton>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:textSize="36sp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/strokeIndex" android:text="1"></TextView>

        <ImageButton
            android:id="@+id/strokeIndexDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="strokeIndexDownClicked"
            android:src="@android:drawable/arrow_down_float" >
</ImageButton>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_margin="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LinearLayout01">
        <TextView android:text="Par" android:layout_width="wrap_content" android:id="@+id/textView3" android:layout_height="wrap_content"></TextView>

        <ImageButton
            android:id="@+id/holeParUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="holeParUpClicked"
            android:src="@android:drawable/arrow_up_float" >
</ImageButton>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:textSize="36sp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/holePar" android:text="3"></TextView>

        <ImageButton
            android:id="@+id/holeParDown"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:onClick="holeParDownClicked"
            android:src="@android:drawable/arrow_down_float" >
</ImageButton>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_margin="10dip">
        <TextView android:text="Score" android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_height="wrap_content"></TextView>

        <ImageButton
            android:id="@+id/holeScoreUp"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:onClick="holeScoreUpClicked"
            android:src="@android:drawable/arrow_up_float" >
</ImageButton>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="36sp" android:layout_gravity="center" android:id="@+id/holeScore" android:text="3"></TextView>

        <ImageButton
            android:id="@+id/holeScoreDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="holeScoreDownClicked"
            android:src="@android:drawable/arrow_down_float" >
</ImageButton>
    </LinearLayout>
</LinearLayout>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:orientation="vertical" android:weightSum="1">
    <ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/divider_horizontal_dark"></ImageView>
</LinearLayout>
</LinearLayout>
